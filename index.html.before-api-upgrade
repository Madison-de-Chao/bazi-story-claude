            opacity: 1;
            transition: opacity 0.5s ease;
        }

        .intro-overlay.fade-out {
            opacity: 0;
            pointer-events: none;
        }

        .intro-video {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .skip-intro-btn {
